@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockListItem>;
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
    var content = (ContentModels.LogoSection)Model.Content;
    var companies = content.Companies;
}

<section class="py-lg">
    <ul class="flex flex-wrap align-center justify-center gap-lg">
        @if (companies != null)
        {
            foreach (var company in companies)
            {
                <li class="flex-1-desktop"><partial name="Partials/Blocklist/Components/CompanyItem" model="company"></li>
            }
        }
    </ul>
</section>
